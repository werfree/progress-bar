{
  "name": "react-progress-bar-hook",
  "description": "A custom React hook for managing and displaying progress bars in React applications.",
  "keywords": [
    "react",
    "progress",
    "progress bar",
    "hook",
    "loading",
    "asynchronous",
    "API calls",
    "spinner",
    "counter",
    "steps"
  ],
  "private": false,
  "version": "1.1.2",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:strict": "eslint '*/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint . --ext ts,tsx,json --fix",
    "prettier": "prettier --write */**/*.{json,ts,tsx,css,md}",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/progress-bar.es.js",
      "types": "./dist/types/main.d.ts",
      "require": "./dist/progress-bar.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/progress-bar.umd.js",
  "module": "./dist/progress-bar.es.js",
  "types": "./dist/types/main.d.ts",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/style-inject": "^0.3.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.5",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "react-hooks": "^1.0.1",
    "style-inject": "^0.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-string": "^1.2.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": {
    "name": "Sayantan Ghosh",
    "email": "gsayantan01@gmail.com",
    "url": "https://werfree.github.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/werfree/progress-bar.git"
  }
}
